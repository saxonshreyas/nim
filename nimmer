package main;

import java.util.Scanner;
import java.util.Random;

/**
 * Write a description of class Nim here.
 * 
 * @author (your name) 
 * @version (a version number or a date)
 */
public class Nim
{
    public static void main(String[] args)
    {
        Scanner keyboard = new Scanner(System.in);
        System.out.println("Hi! Please tell us your name!: ");
        String name = keyboard.nextLine();
        Random num = new Random();
        int num_marbles = num.nextInt(90)+10;
        keyboard = new Scanner(System.in);
        num = new Random();
        int num_diff = num.nextInt(2);
        num = new Random();
        int starter = num.nextInt(2);
        String Starter = " ";
        String diff = " ";
        if(num_diff == 1){
            diff = "Smart";
        }else if(num_diff == 0){
            diff = "Stupid";
        }
        if(starter == 1){
            Starter = "You start!";
        }else if(starter == 0){
            Starter = "The computer starts!";
        }
        System.out.println("Hi, "+name+", this round of Nim involves "+num_marbles+" marbles. In this round you are playing against a "+diff+" opponent."+Starter+" Best of luck! Please press a key to start");
        String anykey = keyboard.nextLine();
    }
}
